
 
  neutron net-create external_network --provider:network_type flat --provider:physical_network extnet  --router:external
  neutron subnet-create --name public_subnet --enable_dhcp=False --allocation-pool=start=192.168.1.20,end=192.168.1.20 --gateway=192.168.1.1 external_network 192.168.1.0/24
  neutron router-create Router1
  neutron router-gateway-set Router1 external_network
  neutron net-create Internal_network
  neutron subnet-create --name Internal_subnet Internal_network 10.0.0.0/24
  neutron router-interface-add Router1 Internal_subnet
  
  openstack network create Interna20 --project admin
  openstack subnet create Sub_Interna20 --network Interna20 --subnet-range 20.1.1.1/24 --allocation-pool start=20.1.1.1,end=20.1.1.240
  openstack subnet create Sub_Interna20 --network Interna20 --subnet-range 20.1.1.1/24
